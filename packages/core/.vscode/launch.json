{
  "configurations": [
    {
      "name": "All tests",
      "env": {
        "NODE_ENV": "debug"
      },
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test/**/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Unit tests",
      "env": {
        "NODE_ENV": "debug"
      },
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test/unit/**/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Integration tests",
      "env": {
        "NODE_ENV": "debug"
      },
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test/integration/**/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
